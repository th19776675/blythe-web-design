{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "shortDesc": {
      "type": "richtext",
      "default": "longDesc"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "specs": {
      "type": "richtext"
    },
    "stock": {
      "type": "integer"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "zine",
        "book",
        "sticker"
      ]
    },
    "abbr": {
      "type": "string"
    }
  }
}
